<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TauraIme">

        <activity
            android:name="com.taura.ime.ui.settings.KeyboardSettingsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TauraIme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.taura.ime.service.TauraKeyboardService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:settingsActivity="com.taura.ime.ui.settings.KeyboardSettingsActivity">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

    </application>

</manifest>
